[user]
	email = code@saul.pw
    name = Saul Pwanson

[push]
	default = simple
[alias]
	unadd = reset HEAD
	vdiff = difftool -y -t meld
[credential]
	helper = cache --timeout 360000
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vim -f -d -c \"wincmd l\" -c 'cd \"$GIT_PREFIX\"' \"$LOCAL\" \"$REMOTE\"
