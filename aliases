alias gd='git difftool'
alias gdc='git difftool --cached'
alias gvd='git vdiff'
alias gvdc='git vdiff --cached'
alias gc='git commit'

alias fix='$EDITOR `git diff --name-only | uniq`'
alias clswp='rm -f ~/.vim/swp/*'
alias val='vim ~/dotfiles/aliases ; source ~/.zshrc'
alias vvi='vim ~/dotfiles/.vimrc'
alias vzsh='vim ~/dotfiles/.zshrc ; source ~/.zshrc'
alias sagi='sudo apt-get install'
alias re='source ~/dotfiles/saulrc'

gsys() {
    grep -r $1 /usr/include/ /usr/local/include
}
